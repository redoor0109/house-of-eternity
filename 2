<script>
(() => {
  // ===== Expected behavior check =====
  // When you tap a thumbnail in Video/Photo page, it should open the lightbox.
  // When you tap outside (backdrop) or press ESC, it should close.

  // ===== Config =====
  const PAGE_SIZE = 5;

  // ===== Elements =====
  const statusTextEl = document.getElementById('statusText');

  const menuBtn = document.getElementById('menuBtn');
  const drawer = document.getElementById('drawer');
  const pages = [...document.querySelectorAll('.page')];

  const tablistEl = document.getElementById('tablist');
  const categories = [...document.querySelectorAll('.faq-category')];
  const pagerEl = document.getElementById('pager');
  const searchInputEl = document.getElementById('searchInput');
  const clearSearchBtn = document.getElementById('clearSearchBtn');

  const lb = document.getElementById('lightbox');
  const lbBody = document.getElementById('lbBody');

  // ===== Drawer =====
  function openDrawer(){
    drawer.setAttribute('aria-hidden','false');
    menuBtn.setAttribute('aria-expanded','true');
  }
  function closeDrawer(){
    drawer.setAttribute('aria-hidden','true');
    menuBtn.setAttribute('aria-expanded','false');
  }

  menuBtn.addEventListener('click', () => {
    const open = drawer.getAttribute('aria-hidden') === 'false';
    open ? closeDrawer() : openDrawer();
  });

  drawer.addEventListener('click', (e) => {
    if (e.target.matches('[data-close]')) closeDrawer();
    if (e.target.matches('[data-nav]')) closeDrawer();
  });

  // ===== Router =====
  function showPage(pageKey){
    pages.forEach(p => p.setAttribute('aria-hidden', p.dataset.page === pageKey ? 'false' : 'true'));
    if (pageKey !== 'home') statusTextEl.textContent = '';
  }

  function route(){
    const hash = (location.hash || '#home').replace('#','');
    const pageKey = ['home','video','photo'].includes(hash) ? hash : 'home';
    showPage(pageKey);
    window.scrollTo({ top: 0, left: 0, behavior: 'instant' });
  }

  window.addEventListener('hashchange', route);

  // ===== Lightbox =====
  function openLightbox(type, src){
    if (type === 'video'){
      lbBody.innerHTML = `<iframe src="${src}" allow="autoplay; encrypted-media" allowfullscreen></iframe>`;
    } else {
      lbBody.innerHTML = `<img src="${src}" alt="" />`;
    }
    lb.setAttribute('aria-hidden','false');
  }

  function closeLightbox(){
    lb.setAttribute('aria-hidden','true');
    lbBody.innerHTML = '';
  }

  // ===== Google Drive ì—°ë™ ì„¤ì • =====
  // ğŸ‘‰ ë³¸ì¸ Google Driveì—ì„œ 'ê³µê°œ'ë¡œ ì„¤ì •í•œ í´ë” IDë¥¼ ë„£ì–´ì£¼ì„¸ìš”
  const DRIVE = {
    photoFolderId: '1aSMttxKYkPVmFYWAyVWZskK3ZTerAESf',
    videoFolderId: '1o9k1LMCZhnUqH7PrSwU0dVV-ljWJ0A01'
  };

  // ğŸ‘‰ Google Drive ì¸ë„¤ì¼ + ë¯¸ë¦¬ë³´ê¸° URL ìƒì„±
  function driveThumb(fileId){
    return `https://drive.google.com/thumbnail?id=${fileId}&sz=w600`;
  }
  function drivePreview(fileId){
    return `https://drive.google.com/file/d/${fileId}/preview`;
  }

  // ğŸ‘‰ í´ë” ë‚´ íŒŒì¼ ëª©ë¡ ë¶ˆëŸ¬ì˜¤ê¸° (ê³µê°œ í´ë” ì „ìš©)
  async function loadDriveFolder(folderId){
    const url = `https://www.googleapis.com/drive/v3/files?q='${folderId}'+in+parents&fields=files(id,name,mimeType)&key=AIzaSyDYqUApnZbrdgl1Lf-AU_fBgso7tPQoS9Q`;
    const res = await fetch(url);
    const json = await res.json();
    return json.files || [];
  }

  async function initDrive(){
    try{
      const photos = await loadDriveFolder(DRIVE.photoFolderId);
      const photoGrid = document.getElementById('photoGrid');
      photoGrid.innerHTML = photos
        .filter(f => f.mimeType.startsWith('image/'))
        .map(f => `
          <a class="archive-item" href="#"
             data-lightbox
             data-type="image"
             data-src="${drivePreview(f.id)}">
            <img src="${driveThumb(f.id)}" alt="${f.name}" />
          </a>
        `).join('');

      const videos = await loadDriveFolder(DRIVE.videoFolderId);
      const videoGrid = document.getElementById('videoGrid');
      videoGrid.innerHTML = videos
        .filter(f => f.mimeType.startsWith('video/'))
        .map(f => `
          <a class="archive-item" href="#"
             data-lightbox
             data-type="video"
             data-src="${drivePreview(f.id)}">
            <img src="${driveThumb(f.id)}" alt="${f.name}" />
            <div class="tag">VIDEO</div>
          </a>
        `).join('');
    }catch(err){
      console.error('Drive load error', err);
    }
  }

  initDrive();

  document.addEventListener('keydown', (e) => {
    const active = document.activeElement;

    // Enter/Space: open lightbox when focused on an archive item
    if ((e.key === 'Enter' || e.key === ' ') && active && typeof active.matches === 'function' && active.matches('[data-lightbox]')){
      e.preventDefault();
      const type = active.dataset.type;
      const src = active.dataset.src;
      if (type && src) openLightbox(type, src);
      return;
    }

    // ESC: close drawer or lightbox
    if (e.key === 'Escape'){
      if (drawer.getAttribute('aria-hidden') === 'false') closeDrawer();
      if (lb.getAttribute('aria-hidden') === 'false') closeLightbox();
    }
  });

  // ===== FAQ logic =====
  let activeKey = tablistEl?.querySelector('.tab[aria-selected="true"]')?.dataset.key
    || tablistEl?.querySelector('.tab')?.dataset.key
    || '';

  let searchQuery = '';
  let searchPage = 1;
  let pageByKey = Object.fromEntries(categories.map(s => [s.dataset.key, 1]));

  function clamp(n,min,max){ return Math.max(min, Math.min(max, n)); }

  function buildPager(current, total){
    const items = [];
    if (total <= 1) return items;

    const push = (type, value) => items.push({ type, value });
    const showRange = (start, end) => { for (let i=start; i<=end; i++) push('page', i); };

    push('prev', Math.max(1, current-1));

    if (total <= 7){
      showRange(1, total);
    } else {
      showRange(1, 2);
      const left = clamp(current - 1, 3, total-2);
      const right = clamp(current + 1, 3, total-2);
      if (left > 3) push('ellipsis');
      showRange(left, right);
      if (right < total - 2) push('ellipsis');
      showRange(total-1, total);
    }

    push('next', Math.min(total, current+1));
    return items;
  }

  function setTabsDisabled(disabled){
    tablistEl?.querySelectorAll('.tab').forEach(btn => {
      btn.setAttribute('aria-disabled', disabled ? 'true' : 'false');
    });
  }

  function showCategory(key){
    categories.forEach(sec => {
      sec.setAttribute('aria-hidden', sec.dataset.key === key ? 'false' : 'true');
    });
  }

  function setActiveTab(key){
    tablistEl?.querySelectorAll('.tab').forEach(btn => {
      const sel = btn.dataset.key === key;
      btn.setAttribute('aria-selected', sel ? 'true' : 'false');
      btn.tabIndex = sel ? 0 : -1;
    });
  }

  function getVisibleFaqItems(){
    if (searchQuery.trim()){
      const q = searchQuery.trim().toLowerCase();
      const all = [...document.querySelectorAll('.faq-category details.faq')];
      return all.filter(d => d.textContent.toLowerCase().includes(q));
    }
    const sec = categories.find(s => s.dataset.key === activeKey);
    return sec ? [...sec.querySelectorAll('details.faq')] : [];
  }

  function ensureEmptyState(section, visibleCount){
    const empty = section.querySelector(':scope > .empty');
    if (empty) empty.style.display = visibleCount ? 'none' : 'block';
  }

  function renderPager(current, total){
    const items = buildPager(current, total);
    if (!items.length){
      pagerEl.innerHTML = '';
      return;
    }

    pagerEl.innerHTML = items.map(it => {
      if (it.type === 'ellipsis') return `<span class="ellipsis" aria-hidden="true">â€¢â€¢â€¢</span>`;
      if (it.type === 'prev') return `<button class="page-btn" type="button" ${current===1 ? 'disabled':''} aria-label="ì´ì „" data-page="${it.value}">ì´ì „</button>`;
      if (it.type === 'next') return `<button class="page-btn" type="button" ${current===total ? 'disabled':''} aria-label="ë‹¤ìŒ" data-page="${it.value}">ë‹¤ìŒ</button>`;
      const isCurrent = it.value === current;
      return `<button class="page-btn" type="button" aria-label="${it.value}í˜ì´ì§€" data-page="${it.value}" ${isCurrent ? 'aria-current="page"':''}>${it.value}</button>`;
    }).join('');

    pagerEl.onclick = (e) => {
      const btn = e.target.closest('.page-btn');
      if (!btn || btn.disabled) return;
      const nextPage = Number(btn.dataset.page);
      if (searchQuery.trim()) searchPage = nextPage;
      else pageByKey[activeKey] = nextPage;
      document.getElementById('faqTitle').scrollIntoView({ behavior: 'smooth', block: 'start' });
      paginateAndRender();
    };
  }

  function paginateAndRender(){
    const items = getVisibleFaqItems();
    const totalPages = Math.max(1, Math.ceil(items.length / PAGE_SIZE));

    const current = searchQuery.trim()
      ? clamp(searchPage, 1, totalPages)
      : clamp(pageByKey[activeKey] || 1, 1, totalPages);

    if (searchQuery.trim()) searchPage = current;
    else pageByKey[activeKey] = current;

    document.querySelectorAll('.faq-category details.faq').forEach(d => d.style.display = 'none');

    if (searchQuery.trim()){
      categories.forEach(sec => sec.setAttribute('aria-hidden','false'));
    } else {
      showCategory(activeKey);
    }

    const start = (current - 1) * PAGE_SIZE;
    const pageItems = items.slice(start, start + PAGE_SIZE);
    pageItems.forEach(d => d.style.display = '');

    if (searchQuery.trim()){
      categories.forEach(sec => {
        const visibleInSection = [...sec.querySelectorAll('details.faq')].some(d => d.style.display !== 'none');
        ensureEmptyState(sec, visibleInSection ? 1 : 0);
      });
      statusTextEl.textContent = `ì „ì²´ ê²€ìƒ‰ ê²°ê³¼: ${items.length}ê°œ`;
    } else {
      const sec = categories.find(s => s.dataset.key === activeKey);
      if (sec) ensureEmptyState(sec, pageItems.length);
      statusTextEl.textContent = '';
    }

    renderPager(current, totalPages);
  }

  tablistEl?.addEventListener('click', (e) => {
    const btn = e.target.closest('.tab');
    if (!btn) return;
    if (btn.getAttribute('aria-disabled') === 'true') return;

    activeKey = btn.dataset.key;
    setActiveTab(activeKey);
    pageByKey[activeKey] = 1;
    paginateAndRender();
  });

  searchInputEl?.addEventListener('input', (e) => {
    searchQuery = e.target.value || '';
    searchPage = 1;
    setTabsDisabled(!!searchQuery.trim());
    paginateAndRender();
  });

  clearSearchBtn?.addEventListener('click', () => {
    searchQuery = '';
    searchInputEl.value = '';
    searchPage = 1;
    setTabsDisabled(false);
    categories.forEach(sec => sec.setAttribute('aria-hidden', sec.dataset.key === activeKey ? 'false' : 'true'));
    paginateAndRender();
    searchInputEl.focus();
  });

  // ===== Boot =====
  document.getElementById('year').textContent = String(new Date().getFullYear());

  // Initial view
  setActiveTab(activeKey);
  showCategory(activeKey);
  setTabsDisabled(false);
  paginateAndRender();
  route();

  // ===== Tests (?test=1) =====
  function runTests(){
    console.assert(document.querySelectorAll('.page').length === 3, 'TEST: should have 3 pages');
    console.assert(document.querySelectorAll('.drawer-link').length >= 3, 'TEST: drawer links exist');
    console.assert(document.querySelectorAll('[data-lightbox]').length >= 2, 'TEST: archive items exist');
    console.assert(typeof PAGE_SIZE === 'number' && PAGE_SIZE >= 1, 'TEST: PAGE_SIZE valid');
    console.assert(document.getElementById('lightbox') && document.getElementById('lbBody'), 'TEST: lightbox elements exist');
    console.log('All tests passed');
  }
  if (new URLSearchParams(location.search).get('test') === '1') runTests();
})();

<script>
const lb = document.getElementById('lightbox');
const lbContent = document.getElementById('lbContent');

function openLightbox(type, src){
  if (type === 'video'){
    lbContent.innerHTML = `
      <iframe src="${src}"
              style="width:100%;aspect-ratio:16/9;border:0;"
              allowfullscreen></iframe>`;
  } else {
    lbContent.innerHTML = `
      <img src="${src}" style="width:100%;height:auto;" />`;
  }
  lb.style.display = 'block';
}

function closeLightbox(){
  lb.style.display = 'none';
  lbContent.innerHTML = '';
}

document.getElementById('lbBg').onclick = closeLightbox;
document.getElementById('lbClose').onclick = closeLightbox;
</script>
</body>
</html>
